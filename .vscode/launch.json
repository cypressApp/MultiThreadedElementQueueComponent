{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Google Tests",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/tests", 
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",  // use "lldb" on macOS or "cppvsdbg" on Windows
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "miDebuggerPath": "/usr/bin/gdb" // Change if needed (e.g., lldb or cppvsdbg)
    }
  ]
}
